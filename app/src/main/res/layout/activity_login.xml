<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".loginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/glass_effect"
                android:elevation="8dp"
                app:cardBackgroundColor="#5EFFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="3"
                            android:src="@drawable/kyndryllogo" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:id="@+id/Reva"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:layout_weight="3"
                            android:layout_marginEnd="5dp"

                            android:src="@drawable/revalogo"
                            app:tint="@color/black" />


                    </LinearLayout>

                    <!--                android:src="@drawable/gauravdp_round" -->


                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:elegantTextHeight="true"
                        android:hint="Username"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:elegantTextHeight="true"
                        android:hint="Password"
                        android:inputType="textPassword" />


                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:backgroundTint="#711387"

                        android:clickable="true"
                        android:elevation="20dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="6dp"
                        android:text="Login"
                        android:textSize="30dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#711386"
                        android:elevation="14dp"
                        android:fadingEdgeLength="0dp"
                        app:cardBackgroundColor="#CEA2DE"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="12dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="8dp"
                        app:contentPaddingBottom="5dp">

                        <TextView
                            android:id="@+id/register_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:text="Register"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="italic" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/googleLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google login" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>